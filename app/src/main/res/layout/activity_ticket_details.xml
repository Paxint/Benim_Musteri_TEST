<?xml version="1.0" encoding="utf-8"?>

<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TicketDetailsActivity">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<TextView
        android:id="@+id/ticket_no_topic"
        android:layout_width="310dp"
        android:layout_height="20dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/bold"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:text="Talep No:"
        android:textColor="@color/BMGRI"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ticket_no"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/custom_input"
        android:ems="10"
        android:fontFamily="@font/regular"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:gravity="center_vertical"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/ticket_no_topic"
        app:layout_constraintTop_toBottomOf="@+id/ticket_no_topic" />

    <TextView
        android:id="@+id/company_topic"
        android:layout_width="310dp"
        android:layout_height="20dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/bold"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:text="Kurum:"
        android:textColor="@color/BMGRI"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/ticket_no"
        app:layout_constraintTop_toBottomOf="@+id/ticket_no"/>

    <TextView
        android:id="@+id/company"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/custom_input"
        android:ems="10"
        android:fontFamily="@font/regular"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:gravity="center_vertical"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/company_topic"
        app:layout_constraintTop_toBottomOf="@+id/company_topic" />

    <TextView
        android:id="@+id/contact_topic"
        android:layout_width="310dp"
        android:layout_height="20dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/bold"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:text="E-posta/Telefon:"
        android:textColor="@color/BMGRI"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/company"
        app:layout_constraintTop_toBottomOf="@+id/company"/>

    <TextView
        android:id="@+id/contact"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/custom_input"
        android:ems="10"
        android:fontFamily="@font/regular"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:gravity="center_vertical"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/contact_topic"
        app:layout_constraintTop_toBottomOf="@+id/contact_topic" />

    <TextView
        android:id="@+id/detail_topic"
        android:layout_width="310dp"
        android:layout_height="20dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/bold"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:text="Konu:"
        android:textColor="@color/BMGRI"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/contact"
        app:layout_constraintTop_toBottomOf="@+id/contact"/>

    <TextView
        android:id="@+id/detail"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/custom_input"
        android:ems="10"
        android:fontFamily="@font/regular"
        android:minHeight="150dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingStart="12dp"
        android:paddingEnd="10dp"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/detail_topic"
        app:layout_constraintTop_toBottomOf="@+id/detail_topic" />

    <Button
        android:id="@+id/answer_button"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="@color/BMLACI"
        android:fontFamily="@font/bold"
        android:text="Cevapla"
        android:textAllCaps="false"
        android:textColor="@color/BMSARI"
        android:textStyle="bold"
        app:cornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/detail"
        app:layout_constraintStart_toStartOf="@+id/detail"
        app:layout_constraintTop_toBottomOf="@+id/detail"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>