<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/BMSARI">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/success_img"
        android:layout_width="350dp"
        android:layout_height="285.95dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_ticket_success"
        app:layout_constraintVertical_bias="0.016"
        app:srcCompat="@drawable/ticket_success" />

    <TextView
        android:id="@+id/txt_ticket_success"
        android:layout_width="250dp"
        android:layout_height="120dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/bold"
        android:lineSpacingExtra="5sp"
        android:text="Talep gönderildi! Lütfen talep numaranızı kaybetmeyiniz."
        android:textAlignment="center"
        android:textColor="@color/BMLACI"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.131" />

    <TextView
        android:id="@+id/txt_ticket_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bold"
        android:text="Talep No:"
        android:textAlignment="center"
        android:textColor="@color/BMLACI"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/success_img"
        app:layout_constraintEnd_toEndOf="@+id/success_img"
        app:layout_constraintHorizontal_bias="0.321"
        app:layout_constraintStart_toStartOf="@+id/success_img"
        app:layout_constraintTop_toBottomOf="@+id/txt_ticket_success"
        app:layout_constraintVertical_bias="0.726" />

    <TextView
        android:id="@+id/ticketNumbertxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bold"
        android:textAlignment="center"
        android:textColor="@color/BMLACI"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/txt_ticket_no"
        app:layout_constraintStart_toStartOf="@+id/txt_ticket_no"
        app:layout_constraintTop_toBottomOf="@+id/txt_ticket_no" />



</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>